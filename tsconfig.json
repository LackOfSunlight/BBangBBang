{
	"compilerOptions": {
		"rootDir": "./game.server/src",
		"outDir": "./game.server/dist",
		"module": "esnext",
		"moduleResolution": "node",
		"target": "esnext",
		"types": ["node", "jest"],
		"sourceMap": false,
		"declaration": true,
		"declarationMap": true,
		"strict": true,
		"jsx": "react-jsx",
		"isolatedModules": true,
		"noUncheckedSideEffectImports": true,
		"moduleDetection": "force",
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"baseUrl": "./game.server/src",
		"paths": {
			"@auth/*": ["auth/*"],
			"@game/*": ["game/*"],
			"@core/*": ["core/*"],
			"@common/*": ["common/*"],
			"@data/*": ["data/*"],
			"@game/init/*": ["init/*"],
			"@game/config/*": ["game/config/*"]
		}
	},
	"include": ["game.server/src/**/*.ts"]
	,
	"exclude": [
		"game.server/src/tests/**",
		"game.server/src/**.test.ts",
		"game.server/src/**/test/**"
	]
}
